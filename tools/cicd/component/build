#!/usr/bin/env variant
# vi: ft=yaml

tasks:
  core:
    import: toolbox/.toolbox/deps/toolbox/variant-lib/utils.yaml
  utils:
    tasks:
      build:
        import: toolbox/.toolbox/deps/toolbox-cicd-build/variant-lib/utils.yaml
  build:
    parameters:
    - name: repo
      type: string
    tasks:
      development:
        steps:
        - task: utils.build.deliverables
          arguments:
            repo: "{{ .repo }}"
            state: development
      staging:
        steps:
        - task: utils.build.deliverables
          arguments:
            repo: "{{ .repo }}"
            state: staging

